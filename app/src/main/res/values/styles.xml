<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography styles -->
    <style name="AppBarTitle">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Bold, clean for title -->
        <item name="android:textSize">35sp</item> <!-- Slightly larger for better visibility -->
        <item name="android:letterSpacing">0.02</item> <!-- Slight letter-spacing for clean look -->
    </style>

    <style name="HeroImageText">
        <item name="android:fontFamily">sans-serif-bold</item> <!-- Bold for emphasis -->
        <item name="android:textSize">32sp</item> <!-- Larger size for prominence -->
        <item name="android:shadowColor">#000000</item> <!-- Subtle shadow for depth -->
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="SectionTitle">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Clear sans-serif for section titles -->
        <item name="android:textSize">20sp</item> <!-- Consistent size for section titles -->
        <item name="android:letterSpacing">0.02</item> <!-- Slight letter-spacing for neatness -->
    </style>

    <style name="OrderItemLabel">
        <item name="android:fontFamily">sans-serif</item> <!-- Clean sans-serif for labels -->
        <item name="android:textSize">16sp</item> <!-- Medium size for item labels -->
    </style>

    <style name="OrderItemValue">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Sans-serif medium for values -->
        <item name="android:textSize">16sp</item> <!-- Same size as labels for uniformity -->
    </style>

    <style name="PriceLabel">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Sans-serif for price label -->
        <item name="android:textSize">18sp</item> <!-- Slightly larger for emphasis -->
    </style>

    <style name="PriceValue">
        <item name="android:fontFamily">sans-serif-bold</item> <!-- Bold for price value -->
        <item name="android:textSize">24sp</item> <!-- Larger size for price emphasis -->
    </style>

    <style name="ButtonText">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Medium sans-serif for button text -->
        <item name="android:textSize">16sp</item> <!-- Clear size for readability -->
        <item name="android:textAllCaps">false</item> <!-- Avoid all caps for readability -->
        <item name="android:letterSpacing">0.02</item> <!-- Slight letter-spacing for clarity -->
    </style>

    <style name="BottomBarText">
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Sans-serif for bottom bar text -->
        <item name="android:textSize">16sp</item> <!-- Consistent size for bottom bar -->
    </style>
</resources>
