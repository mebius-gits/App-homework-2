<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F4F1ED"
    tools:context=".MainActivity">

    <!-- Header Image -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="wrap_content"
        android:layout_height="265dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        android:src="@drawable/pizza_cat" />

    <!-- Bold Title -->
    <TextView
        android:id="@+id/titleBelowImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="🍕 精選義式披薩 🍕"
        android:textColor="#4A2C18"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center" />

    <!-- Order Summary -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="訂單內容"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C2C1E" />

            <TextView
                android:id="@+id/selectedPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="披薩：瑪格麗特 x 1"
                android:textSize="18sp"
                android:textColor="#B03A1E"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/selectedSideBeverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附餐：無"
                android:textSize="18sp"
                android:textColor="#B03A1E"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總價：$250"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4A2C18"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="備註（可選）">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="3"
            android:backgroundTint="#B03A1E"
            android:textColorHint="#999999"
            android:textColor="#2E2E2E" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPizzaSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#B03A1E"
        android:text="選擇披薩"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="14dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSideBeverageSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#B03A1E"
        android:text="附餐與飲料"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:cornerRadius="14dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#FFFFFF"
        android:text="送出訂單"
        android:textColor="#B03A1E"
        android:textSize="18sp"
        app:cornerRadius="22dp"
        app:elevation="3dp" />

</LinearLayout>