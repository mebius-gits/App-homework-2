<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_soft"
    tools:context=".PizzaSelectionActivity">

  <!-- App Bar with title -->
  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:elevation="0dp"
      app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="@android:color/transparent"
        app:title="選擇披薩種類"
        app:titleTextAppearance="@style/AppBarTitle"
        app:titleTextColor="@color/text_premium" />
  </com.google.android.material.appbar.AppBarLayout>

  <!-- Pizza Selection CardView -->
  <androidx.cardview.widget.CardView
      android:id="@+id/pizzaSelectionCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      app:cardCornerRadius="16dp"
      app:cardElevation="2dp"
      app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

      <!-- Title for Pizza Selection -->
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="選擇您的披薩種類"
          android:textAppearance="@style/SectionTitle"
          android:textColor="@color/text_premium"
          android:textSize="24sp" />

      <!-- Pizza options TableLayout -->
      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:stretchColumns="1"
          android:orientation="horizontal">

        <!-- Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

          <ImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/pizza_margherita"  <!-- Replace with your image -->
          android:contentDescription="瑪格麗特披薩"
          android:layout_gravity="center" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:paddingStart="16dp"
              android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radioMargherita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="瑪格麗特披薩"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大：$500  小：$300"
                android:textSize="14sp"
                android:textColor="@color/text_premium" />
          </LinearLayout>
        </TableRow>

        <!-- Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

          <ImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/pizza_pepperoni"  <!-- Replace with your image -->
          android:contentDescription="義式辣味香腸披薩"
          android:layout_gravity="center" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:paddingStart="16dp"
              android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radioPepperoni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="義式香腸披薩"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大：$700  小：$550"
                android:textColor="@color/text_premium"
                android:textSize="14sp" />
          </LinearLayout>
        </TableRow>

        <!-- Row 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

          <ImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/pizza_vegetarian"  <!-- Replace with your image -->
          android:contentDescription="素食披薩"
          android:layout_gravity="center" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:paddingStart="16dp"
              android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radioVegetarian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="素食披薩"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大：$400  小：$250"
                android:textSize="14sp"
                android:textColor="@color/text_premium" />
          </LinearLayout>
        </TableRow>

        <!-- Row 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

          <ImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:src="@drawable/pizza_hawaiian"  <!-- Replace with your image -->
          android:contentDescription="夏威夷披薩"
          android:layout_gravity="center" />

          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1"
              android:paddingStart="16dp"
              android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/radioHawaiian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏威夷披薩"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />

            <!-- Price -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大：$200  小：$100"
                android:textSize="14sp"
                android:textColor="@color/text_premium" />
          </LinearLayout>
        </TableRow>
      </TableLayout>

      <!-- Confirm Button -->
      <com.google.android.material.button.MaterialButton
          android:id="@+id/btnConfirmSelection"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:backgroundTint="@color/button_primary"
          android:text="確認"
          android:textColor="@android:color/white"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/pizzaOptions" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <!-- Bottom checkout bar -->
  <androidx.cardview.widget.CardView
      android:id="@+id/checkoutCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardCornerRadius="24dp"
      app:cardElevation="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_confirm"
        android:orientation="horizontal"
        android:padding="16dp">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:text="確認"
          android:textAppearance="@style/BottomBarText"
          android:textColor="@color/white"
          android:textSize="30sp" />

      <com.google.android.material.button.MaterialButton
          android:id="@+id/btnConfirmOrder"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/white"
          android:paddingStart="24dp"
          android:paddingEnd="24dp"
          android:text="送出訂購"
          android:textAppearance="@style/ButtonText"
          android:textColor="@color/button_confirm"
          app:cornerRadius="24dp"
          app:elevation="0dp" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
