<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1ED"
    tools:context=".PizzaSelectionActivity">

  <!-- Bold Title Only -->
  <TextView
      android:id="@+id/titleBelowImage"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="🍕 精選義式披薩 🍕"
      android:textColor="#4A2C18"
      android:textSize="28sp"
      android:textStyle="bold"
      android:fontFamily="sans-serif-condensed"
      android:gravity="center"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Pizza Selection Card -->
  <androidx.cardview.widget.CardView
      android:id="@+id/pizzaSelectionCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      app:cardCornerRadius="18dp"
      app:cardElevation="3dp"
      app:layout_constraintTop_toBottomOf="@id/titleBelowImage"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="選擇您的披薩種類"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="#3C2C1E" />

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerViewPizzas"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:clipToPadding="false"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          tools:listitem="@layout/item_pizza_selection" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <!-- Confirm Button -->
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btnConfirmSelection"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginEnd="24dp"
      android:layout_marginTop="16dp"
      android:backgroundTint="#B03A1E"
      android:text="確認訂單"
      android:textColor="#FFFFFF"
      android:textSize="18sp"
      app:cornerRadius="20dp"
      app:elevation="2dp"
      app:layout_constraintTop_toBottomOf="@id/pizzaSelectionCard"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

  <!-- Bottom Checkout Card -->
  <androidx.cardview.widget.CardView
      android:id="@+id/checkoutCard"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      app:cardCornerRadius="24dp"
      app:cardElevation="4dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">
    <!-- Add your checkout content here -->
  </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
